namespace com.ibm.streamsx.objectstorage.test;

use com.ibm.streamsx.objectstorage::*;

composite ObjectStorageSource_consistent_region_unsupported_configuration {

	graph

		/**
		 * An application with a consistent region requires the
		 * job control plane.
		 */
		() as JCP = JobControlPlane() {}

		stream<rstring name> Name = Custom() {
			logic
			onProcess: {
				submit ({name="XX"}, Name);
			}
		}

		@consistent(trigger=periodic, period=5.0)
		stream<rstring data> ReadObjects = ObjectStorageSource(Name) {
			param
				IAMApiKey: "xxxx";
				IAMServiceInstanceId: "xxx"; 
				IAMTokenEndpoint: "https://iam.bluemix.net/oidc/token";
				objectStorageURI: "cos:/test";								
				endpoint : "s3.us.cloud-object-storage.appdomain.cloud";
				//objectName: "dummy";
		}

		() as CustomSink = Custom(ReadObjects as I) {
			logic
				onTuple I: {
					println(I);
				}
		}

}

